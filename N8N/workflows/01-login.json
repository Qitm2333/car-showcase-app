      ],
      "id": "get-user-data",
      "name": "获取用户数据（Google Sheet）"
    },
    {
      "parameters": {
        "jsCode": "// 解析CSV数据\nconst csvData = $input.first().json.data;\nconst lines = csvData.split('\\n');\nconst headers = lines[0].split(',');\n\n// 转换为JSON数组\nconst users = [];\nfor (let i = 1; i < lines.length; i++) {\n  if (lines[i].trim()) {\n    const values = lines[i].split(',');\n    const user = {};\n    headers.forEach((header, index) => {\n      user[header.trim()] = values[index]?.trim();\n    });\n    users.push(user);\n  }\n}\n\nreturn users.map(user => ({ json: user }));"
      },
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
        680,
        300
      ],
      "id": "parse-csv",
      "name": "解析CSV数据"
    },
    {
      "parameters": {
        "conditions": {
          "options": {
            "caseSensitive": true,
            "leftValue": "",
            "typeValidation": "strict"
          },
          "conditions": [
            {
              "leftValue": "={{ $json.inviteCode }}",
              "rightValue": "={{ $('Webhook - 接收登录请求').item.json.body.inviteCode }}",
              "operator": {
                "type": "string",
                "operation": "equals"
              }
            },
            {
              "leftValue": "={{ $json.status }}",
              "rightValue": "active",
              "operator": {
                "type": "string",
                "operation": "equals"
              }
            }
          ],
          "combineOperation": "all"
        },
        "options": {}
      },
      "type": "n8n-nodes-base.filter",
      "typeVersion": 2,
      "position": [
        900,
        300
      ],
      "id": "filter-user",
      "name": "验证邀请码"
    },
    {
      "parameters": {
        "jsCode": "// 登录成功 - 更新最后登录时间\nconst user = $input.first().json;\nconst now = new Date().toISOString().split('T')[0];\n\nreturn [{\n  json: {\n    success: true,\n    message: '登录成功',\n    data: {\n      inviteCode: user.inviteCode,\n      userName: user.userName,\n      email: user.email,\n      lastLoginAt: now\n    },\n    timestamp: new Date().toISOString()\n  }\n}];"
      },
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
        1120,
        200
      ],
      "id": "login-success",
      "name": "✅ 登录成功"
    },
